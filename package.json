{
  "name": "snippet",
  "displayName": "Snippet - AI Prototyping",
  "description": "AI prototyping assistant powered by llama.cpp",
  "version": "0.0.1",
  "publisher": "snippet",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-sidebar",
          "title": "Snippet AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "snippet-sidebar": [
        {
          "type": "webview",
          "id": "snippet.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "snippet.openChat",
        "title": "Snippet: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "snippet.insertCode",
        "title": "Snippet: Insert Code at Cursor",
        "icon": "$(insert)"
      },
      {
        "command": "snippet.explainCode",
        "title": "Snippet: Explain Selected Code",
        "icon": "$(question)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snippet.explainCode",
          "when": "editorHasSelection",
          "group": "snippet"
        }
      ]
    },
    "configuration": {
      "title": "Snippet",
      "properties": {
        "snippet.llamaServerUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "URL of the llama.cpp server"
        },
        "snippet.model": {
          "type": "string",
          "default": "",
          "description": "Model name or path (optional)"
        },
        "snippet.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Sampling temperature"
        },
        "snippet.maxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 1,
          "maximum": 32768,
          "description": "Maximum tokens to generate"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "mocha -r ts-node/register \"test/**/*.ts\" && jest",
    "test:client": "jest",
    "test:server": "mocha -r ts-node/register \"test/**/*.ts\"",
    "test:watch": "mocha -r ts-node/register \"test/**/*.ts\" --watch",
    "test:coverage": "nyc mocha -r ts-node/register \"test/**/*.ts\"",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.x",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "chai": "^6.2.2",
    "eslint": "^8.x",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.0.0",
    "mocha": "^11.7.5",
    "mock-require": "^3.0.3",
    "rewire": "^9.0.1",
    "sinon": "^18.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.x"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
