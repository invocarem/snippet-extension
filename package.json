{
  "name": "snippet",
  "displayName": "Snippet - AI Prototyping",
  "description": "AI prototyping assistant powered by llama.cpp",
  "version": "0.0.1",
  "publisher": "snippet",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippet-sidebar",
          "title": "Snippet AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "snippet-sidebar": [
        {
          "type": "webview",
          "id": "snippet.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "snippet.openChat",
        "title": "Snippet: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "snippet.insertCode",
        "title": "Snippet: Insert Code at Cursor",
        "icon": "$(insert)"
      },
      {
        "command": "snippet.explainCode",
        "title": "Snippet: Explain Selected Code",
        "icon": "$(question)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snippet.explainCode",
          "when": "editorHasSelection",
          "group": "snippet"
        }
      ]
    },
    "configuration": {
      "title": "Snippet",
      "properties": {
        "snippet.llamaServerUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "URL of the llama.cpp server"
        },
        "snippet.mcpServers": {
          "type": "array",
          "description": "List of MCP servers for the snippet extension.",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "Server name" },
              "command": { "type": "string", "description": "Command to start the server" },
              "args": { "type": "array", "items": { "type": "string" }, "description": "Arguments for the command" },
              "type": { "type": "string", "description": "Connection type (e.g., stdio)" },
              "enabled": { "type": "boolean", "description": "Whether the server is enabled" },
              "timeout": { "type": "number", "description": "Timeout in seconds", "default": 60 }
            },
            "required": ["name", "command", "args", "type", "enabled"]
          },
          "default": []
        },
        "snippet.model": {
          "type": "string",
          "default": "",
          "description": "Model name or path (optional)"
        },
        "snippet.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Sampling temperature"
        },
        "snippet.maxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 1,
          "maximum": 32768,
          "description": "Maximum tokens to generate"
        },
        "snippet.rules": {
          "type": "array",
          "description": "Custom rules for the snippet extension.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "description": "Rule identifier" },
              "description": { "type": "string", "description": "Description of the rule" },
              "enabled": { "type": "boolean", "description": "Whether the rule is enabled", "default": true },
              "config": { "type": "object", "description": "Custom configuration for the rule" }
            },
            "required": ["id", "description"]
          },
          "default": []
        },
        "snippet.rulesPaths": {
          "type": "array",
          "description": "Paths to rule files for the snippet extension.",
          "items": {
            "type": "object",
            "properties": {
              "path": { "type": "string", "description": "Absolute or workspace-relative path to the rule file." },
              "enabled": { "type": "boolean", "description": "Whether this rule file is enabled.", "default": true }
            },
            "required": ["path"]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:client": "jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.x",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.0.0",
    "mock-require": "^3.0.3",
    "rewire": "^9.0.1",
    "sinon": "^18.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.x"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
